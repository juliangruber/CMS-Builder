<h1>Listing Contents</h1>

<ul>
<% @contents.each do |content_type| %>
    <li><%= "#{content_type[:name]} (#{content_type[:contents].count})" %> (<%= link_to 'Show', "/#{content_type[:name].downcase}" %>)
      <% if content_type[:contents].count > 0 %>
        <ul>
          <% content_type[:contents].each do |content| %>
            <li><%= content.title %><% if Structure::Page.where(:content_type => content_type[:id]).all.count > 0 %> (<%= link_to 'Show', content %>)<% end %></li>
          <% end %>
        </ul>
      <% end %>
    </li>
    <!--<td><%= link_to 'Show', content_type %></td>
    <td><%= link_to 'Edit', edit_structure_content_path(content_type) %></td>
    <td><%= link_to 'Destroy', content_type, confirm: 'Are you sure?', method: :delete %></td>-->
<% end %>
</ul>

