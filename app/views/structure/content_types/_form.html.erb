<%= form_for @content_type, :url => structure_content_type_path(@content_type) do |f| %>
  <% if @content_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@content_type.errors.count, "error") %> prohibited this content_type from being saved:</h2>

      <ul>
      <% @content_type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name %><br />
  <%= f.text_field :name %><br /><br />

  Fields:
  <div id="fields">
    <%= add_field_link("(add field)", f) %>
    <%= render :partial => 'field', :collection => @content_type.fields, :locals => {:f => f} %>
  </div><br />

  Relationships:
  <div id="relationships">
    <%= add_relationship_link("(add relationship)", f) %>
    <%= render :partial => 'relationship', :collection => @content_type.relationships, :locals => {:f => f} %>
  </div><br />


  <div class="actions">
    <%= f.submit %>
  </div><br />
<% end %>
